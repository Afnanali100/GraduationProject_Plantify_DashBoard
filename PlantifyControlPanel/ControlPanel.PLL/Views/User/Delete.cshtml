@model UserViewModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>Are u Sure W wanna Delete this User </h1>

    <div style="font-size:large; color:red" asp-validation-summary="All"></div>
    <form class="pt-3" method="post" asp-controller="User" asp-action="Delete">
<div class="form-group">
    <Lable>Id</Lable>
    <input asp-for="@Model.Id" class="form-control form-control-lg" id="exampleInputEmail1" readonly>
</div>

    <div class="form-group">
        <Lable>UserName</Lable>
       
    <input asp-for="@Model.UserName" class="form-control form-control-lg" id="exampleInputEmail1" readonly>
    </div>


    <div class="form-group">
        <Lable>Email</Lable>
      
    <input asp-for="@Model.Email" class="form-control form-control-lg" id="exampleInputPassword1" readonly>
     
    </div>

    <div class="form-group">
        <label>Role</label>
        <input asp-for="@Model.Roles"  class="form-control" readonly>
    </div>

    <div class="mt-3">
        <input type="submit" value="Delete" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">
    </div>
</form>