@model RoleViewModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


<h1>Are u Sure W wanna Delete this Role </h1>

<div style="font-size:large; color:red" asp-validation-summary="All"></div>
<form class="pt-3" method="post" asp-controller="Role" asp-action="Delete">
    <div class="form-group">
        <Lable>Id</Lable>
    
        <input asp-for="@Model.Id" class="form-control form-control-lg" id="exampleInputEmail1" readonly>
    </div>

    <div class="form-group">
        <Lable>RoleName</Lable>
   
        <input asp-for="@Model.RoleName" class="form-control form-control-lg" id="exampleInputEmail1" readonly>
    </div>


    <div class="mt-3">
        <input type="submit" value="Delete" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">
    </div>
  
</form>

