@model RoleViewModel
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>Upadate Role </h1>
<form class="pt-3" method="post" asp-controller="Role" asp-action="Update">
    <div style="font-size:large; color:red" asp-validation-summary="All"></div>

    <div class="form-group">
        <Lable>RoleName</Lable>
   
        <input asp-for="@Model.RoleName" class="form-control form-control-lg" id="exampleInputEmail1">
        <span asp-validation-for="@Model.RoleName"></span>

    </div>



    <div class="mt-3">
        <input type="submit" value="Update" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">
    </div>
</form>
@section ValidationScriptSection{
    <partial name="_ValidationScriptsPartial" />
}


