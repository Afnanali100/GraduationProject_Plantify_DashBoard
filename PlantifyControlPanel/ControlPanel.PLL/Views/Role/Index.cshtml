@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="admin" class="admin-container" style="">
    <h2 style="background-color:deeppink">Roles List</h2>
   
 
    <form class="row col-8 offset-1">
        <div class="col-8 ">
            <input type="text" class="form-control" name="name" placeholder="Enter The role Name" />
        </div>
        <div class="col-4 ">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </form>
    
    <br />
    <br />
  @if(Model.Count()>0)
    {


        <table id="admin-table" class="admin-table ">


            <thead class="ahead">
                <tr>
                   
                    <th >@Html.DisplayNameFor(u=>u.Id)</th>
                    <th>@Html.DisplayNameFor(u=>u.RoleName)</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody id="admin-table-body" class="bad">
                <!-- Data will be inserted here -->
                @foreach (var user in Model)
                {
                    <tr>
                        <th style="color: #5f5f62;">@user.Id</th>
                        <th style="color: #5f5f62;">@user.RoleName</th>
                        <th>
                            <partial name="_ButtonPartialView" model="@user.Id.ToString()" />
                        </th>
                    </tr>
                }

            </tbody>
        </table>


    }

    else
    {
        <h2 class="mt-5 alert alert-warning">There is Not Any Role</h2>
    
    }

</div>

@section Scripts{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link href="~/css2/stylesheet_userindex.css" rel="stylesheet" />
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}