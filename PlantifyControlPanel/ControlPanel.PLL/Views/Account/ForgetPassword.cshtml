@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}



<div class="container">
    <h2>Forget Password</h2>
   

    <form asp-controller="Account" asp-action="SendEmail" method="post" >
        <div asp-validation-summary="All">
        </div>
        <input asp-for="@Model.Email" id="email" name="email" placeholder="Enter your email" required>
        <span asp-validation-for="@Model.Email"></span>

        <button type="submit">SEND</button>
    </form>
</div>
@section ValidationScriptSection{
    <partial name="_ValidationScriptsPartial" />
}

@section Scripts{
    <link href="~/css2/stylesheet.css" rel="stylesheet" />
}

