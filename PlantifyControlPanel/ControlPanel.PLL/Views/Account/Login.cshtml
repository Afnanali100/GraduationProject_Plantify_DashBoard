@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}



<h4>Hello! let's get started</h4>
              <h6 class="font-weight-light">Sign in to continue.</h6>
              <form class="pt-3" method="post" asp-controller="Account" asp-action="Login">
               <div asp-validation-summary="All"></div>
                  
                  <div class="form-group">
                  <input asp-for="@Model.Email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Email">
                   <span asp-validation-for="@Model.Email"></span> 
              
              </div>

                <div class="form-group">
                  <input asp-for="@Model.Password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password">
                       <span asp-validation-for="@Model.Password"></span>
                </div>

                <div class="mt-3">
                    <input type="submit" value="SIGN IN" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">
                </div>
               
                
                <div class="my-2 d-flex justify-content-between align-items-center">
                  <div class="form-check">
                    <label class="form-check-label text-muted">
                      <input asp-for="@Model.RememberMe" class="form-check-input">
                      Keep me signed in
                    </label>
                  </div>
                  <a asp-controller="Account" asp-action="ForgetPassword" class="auth-link text-black">Forgot password?</a>
                </div>
                      
     
  

                <div class="text-center mt-4 font-weight-light">
                  Don't have an account? <a asp-controller="Account" asp-action="Register" class="text-primary">Create</a>
                </div>
              </form>
@section ValidationScriptSection{
    <partial name="_ValidationScriptsPartial" />
}