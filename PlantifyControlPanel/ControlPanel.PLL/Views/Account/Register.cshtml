
@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}



<h4>New here?</h4>

<h6 class="font-weight-light">Signing up is easy. It only takes a few steps</h6>
<div asp-validation-summary="All">

</div>

<form class="pt-3" asp-controller="Account" asp-action="Register" method="post">
    <div class="form-group">
        <input    asp-for="@Model.UserName"  class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Username">
            <span asp-validation-for="@Model.UserName" ></span>
    </div>

    <div class="form-group">
        <input  asp-for="@Model.Email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Email">
        <span asp-validation-for="@Model.Email"></span>
    </div>

    <div class="form-group">
        <input  asp-for="@Model.Password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password">
        <span asp-validation-for="@Model.Password"></span>
    
    </div>


    <div class="mb-4">
        <div class="form-check">
            <label class="form-check-label text-muted">
                <input id="check" asp-for="@Model.IsAgree" class="form-check-input">
                I agree to all Terms & Conditions
            </label>
            <span asp-validation-for="@Model.IsAgree"></span>
        </div>
    </div>


    <div class="mt-3">
        <input type="submit"  onclick="checkk(event);" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" value="SIGN UP" required="required" />
        <span asp-validation-for="@Model.IsAgree"></span>
    </div>

    <div class="text-center mt-4 font-weight-light">
        Already have an account? <a asp-controller="Account" asp-action="Login" class="text-primary">Login</a>
    </div>
</form>
@section ValidationScriptSection{
    <partial name="_ValidationScriptsPartial" />
    
}
